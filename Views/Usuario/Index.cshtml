@using proyectoWeb_GYM.Controllers;
@using proyectoWeb_GYM.Models;


@{
    ViewData["Title"] = "Reportes";
    Layout = "~/Views/Shared/_Layout.cshtml";

	var membresia = ViewData["listaMembresia"];
	var usuarios = ViewData["listadoUsuarios"];
    var pagos = ViewData["listadoPagos"];
}


<!DOCTYPE html>
<html>

<head>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

	<link rel="shortcut icon" type="image/png" href="~/icono_principal.png" />
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

	<link href="~/css/formato.css" rel="stylesheet" />


</head>

<body>

	<div class="mt-2" style="border-radius:5px">
		<div class="text-center">
			<h5 class="display-4">Usuarios</h5>
			<p class="mb-4">
				La siguiente tabla es para llevar el registro de usuarios, con su perfil completo para uso de el administrador.
			</p>
		</div>

		<div class="container row p-3 mt-5 table-responsive">
			<div class="col-md-12">
				<table class="table table-bordered table-striped table-hover text-center">
					<thead class="table-success">
						<tr>
							<th>ID Usuario</th>
							<th>Nombre</th>
							<th>Apellido</th>
							<th>Membresia</th>
							<th>Correo</th>
							<th>Edad</th>
							<th>Fecha de Creacion</th>
						</tr>
					</thead>

					<tbody>
						@foreach (UsuariosReportados usuario in (IEnumerable<UsuariosReportados>)usuarios)
						{
							<tr>
								<td>@usuario.id</td>
								<td>@usuario.nombre</td>
								<td>@usuario.apellido</td>
								<td>@usuario.nombre_mem</td>
								<td>@usuario.correo</td>
								<td>@usuario.edad</td>
								<td>@usuario.fecha</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>

		<div class="text-center">

			<a class="btn btn-primary mt-3 mb-3" href="@Url.Action("GenerarPDF", "Usuario")" target="_blank">Descargar PDF</a>


		</div>

	</div>



	<div class="mt-5" style="border-radius:5px">
		<div class="text-center">
			<h5 class="display-4">Pagos</h5>
			<p class="mb-4">
				La siguiente tabla es para llevar el registro de pagos para uso de el administrador.
			</p>
		</div>

		<div class="container row p-3 mt-5 table-responsive">
			<div class="col-md-12">
				<table class="table table-bordered table-striped table-hover text-center">
					<thead class="table-warning">
						<tr>
							<th>ID Pago</th>
							<th>Nombre</th>
							<th>Apellido</th>
							<th>Correo</th>
							<th>Telefono</th>
							<th>Membresia</th>
							<th>Fecha del Pago</th>
						</tr>
					</thead>

					<tbody>
						@foreach (PagosReportados pago in (IEnumerable<PagosReportados>)pagos)
						{
							<tr>
								<td>@pago.id_pago</td>
								<td>@pago.nombre</td>
								<td>@pago.apellido</td>
								<td>@pago.correo</td>
								<td>@pago.telefono</td>
								<td>@pago.nombre_mem</td>
								<td>@pago.fecha</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>

		<div class="text-center">

			<a class="btn btn-primary mt-3 mb-3" href="@Url.Action("GenerarPDF2", "Usuario")" target="_blank">Descargar PDF</a>


		</div>

	</div>

</body>

</html>




